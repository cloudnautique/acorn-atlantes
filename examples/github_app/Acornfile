args: {
	// If true, will bootstrap the Atlantis server.
	bootstrap: true
}

acorns: atlantis: {
	image: "ghcr.io/cloudnautique/atlantis:v0.26.0-#"
	secrets: [
		"envconfig:envconfig",
		"github-app:github-app",
		"atlantis-creds:atlantis-creds",
	]
	deployArgs: {
		bootstrap:       args.bootstrap
		repoAllowList:   "github.com/cloudnautique/atlantis-testing"
		enableGitHubApp: !args.bootstrap
		//serverConfigYaml: {
		//automerge:       true
		//"parallel-plan": true
		//}
		//serverReposYaml: {
		//	repos: [
